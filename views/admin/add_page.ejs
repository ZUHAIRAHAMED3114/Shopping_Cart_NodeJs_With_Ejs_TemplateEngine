<%- include('../layouts/adminheader')%>

    <h1 class="page-title"> Add a page </h1>
    <a href="/admin/pages" class="btn btn-primary ">Back to all pages</a>
    <br><br>

    <form action="/admin/pages/add-page" method="post">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" placeholder="title" name="title" value="<%= title%>">
        </div>

        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" placeholder="title" name="slug" value="<%= slug%>">
        </div>

        <div class="form-group">
            <label for="">Content</label>
            <textarea class="form-control" name="content" id="ta" cols="30" rows="10"> <%=content%></textarea>
        </div>
        <button type="submit" class="btn btn-primary">submit</button>

    </form>
    <%- include('../layouts/adminfooter')%>